public class SelectSort{
    
    public static void sort(int arr[]){
        int index;
        int smallestIndex;
        int size = arr.length;
        for(index=0;index<size-1;index++){
            smallestIndex = seekSmallestIndex(index,arr);
            interchange(index,smallestIndex,arr);
        }
    }
    
    private static int seekSmallestIndex(int startIndex,int arr[]){
        int min = arr[startIndex];
        int indexOfMin = startIndex;
        int index;
        for(index=startIndex;index<arr.length;index++){
            if(arr[index]<min){
                indexOfMin = index;
            }
        }
        return indexOfMin;
    }
    
    private static void interchange(int i,int j,int arr[]){
        int temp;
        temp = arr[i];
        arr[i] = arr[j];
        arr[j] = temp;
    }
}
